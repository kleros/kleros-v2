{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~*": [
        "./*"
      ],
      "src*": [
        "./src*"
      ],
      "hooks*": [
        "./src/hooks*"
      ],
      "components*": [
        "./src/components*"
      ],
      "queries*": [
        "./src/hooks/queries*"
      ]
    },
    "experimentalDecorators": true,
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es2017",
    "lib": [
      "es6",
      "dom",
      "esnext.asynciterable",
      "es2017"
    ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "isolatedModules": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "dist",
    "commitlint.config.js"
  ]
}
